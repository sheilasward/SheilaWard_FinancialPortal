@model SheilaWard_FinancialPortal.Models.CustomResetPasswordViewModel
@{
    Layout = "~/Views/Shared/_RegisterLogin.cshtml";
    ViewBag.Title = "Reset Password";
}

<div class="wrapper wrapper-full-page">
    <div class="full-page pw-reset-page" filter-color="black">
        <!--   you can change the color of the filter page using: data-color="blue | purple | green | orange | red | rose " -->
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center">
                    <div class="card card-pw-reset center-block">
                        <h2 class="card-title text-center">Change Your Password</h2>

                        <div class="form-horizontal text-left">
                            <div class="col-md-12">
                                <!-- form start -->
                                <hr class="hr-purple" />
                                <br />
                                @using (Html.BeginForm("CustomResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary("", new { @class = "text-danger" })
                                    @Html.HiddenFor(model => model.Code)
                                    @Html.HiddenFor(model => model.Email)

                                    <div class="form-group">
                                        @Html.LabelFor(m => m.OldPassword, new { @class = "col-md-2 control-label" })
                                        <div class="col-md-8">
                                            @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(m => m.NewPassword, new { @class = "col-md-2 control-label" })
                                        <div class="col-md-8">
                                            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(m => m.ConfirmNewPassword, new { @class = "col-md-2 control-label" })
                                        <div class="col-md-8">
                                            @Html.PasswordFor(m => m.ConfirmNewPassword, new { @class = "form-control" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" class="btn btn-purple" value="Reset" />
                                        </div>
                                    </div>
                                }
                                <a href="@Url.Action("Lobby", "Home")">Back to the Lobby</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @Html.Partial("_Footer");
        </div>
        
    </div>
</div>

@section scripts
    {
 
}

